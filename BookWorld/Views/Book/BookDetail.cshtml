@model BookWorld.Models.Book
@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> UserManager

     @{
         var user = await UserManager.GetUserAsync(User);
         var userId = user?.Id;

         
         UserBasketDto userBasketDto = new UserBasketDto {BookId=Model.Id ,UserId = userId,Number=5 };


     }








<br>

 
<div class="card text-center ">
   
    <div class="row g-4">
        <div class="col-md-2"></div>
            <div class="col-md-4">
                <img src="@Url.Content(Model.Image)" alt="">
                <br><br>
                    <div>
                        <div class="btn btn-outline-dark mt-auto">
                            @Html.ActionLink("Sepete Ekle","AddBookToBasket",userBasketDto)
                        </div>
                    </div>
            </div>
            <div class="col-md-4">
                <div class="card-body">
                    <h5 class="card-title">Kitap İsmi: @Model.Name</h5>
                    <h6 class="fst-italic">Yazar: @Model.Author.Name</h6>
                    <h6 class="fst-italic">Yayınevi: @Model.Publisher.Name</h6>
                    <h6 class="fst-italic">Yayınlanma Tarihi: @Model.ReleaseDate</h6>
                    <h6 class="fst-italic">Yayınevi: @Model.Publisher.Name</h6>
                    <h6 class="fst-italic">Fiyatı: @Model.Price TL</h6>
                    <form>
                        <div class="form-group">
                            <input type="number" id="tentacles" name="tentacles"
                                   min="1" max="10" placeholder="Number">
                            </div>
                            </form>
                        </div>
                </div>
        </div>


    </div>
